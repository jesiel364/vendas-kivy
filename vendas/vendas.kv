#:import hex kivy.utils.get_color_from_hex

<Btn@Button>:
	background_normal:''
	background_color: hex('#BA004F')
	color: hex('#ffffff')


<VendasWindow>:

#Navbar
	orientation: 'vertical'
	BoxLayout:
		size_hint_y: .1
		canvas.before:
			Color:
				rgba: hex('#00EBBF')
			Rectangle:
				size: self.size
				pos: self.pos

		spacing: .5


		Label:
			id: lbl_bemvindo
			size_hint_x: .3
			text: 'Seja Bem Vindo: '
			color: hex('#1F1F1F')

		GridLayout:
			size_hint_x: .2
			rows: 2
			cols: 2
			Label:
				text: 'Data: '
				color: hex('#1F1F1F')
			
			Label:
				id: data
				color: hex('#1F1F1F')

			Label:
				text: 'Hora: '
				color: hex('#1F1F1F')

			Label:
				id: hora
				color: hex('#1F1F1F')

		Label:
			size_hint_x: .2

		
		Btn:
			id: admin_btn
			size_hint_x: .15
			text: 'Administrador'
			on_release: root.admin()
			
		
		Btn:
			id: sair
			size_hint_x: .15
			text: 'Sair'
			on_release: root.sair()

			# Main
	BoxLayout:
		canvas.before:
			Color:
				rgba: hex('#6400EB')
			Rectangle:
				size: self.size
				pos: self.pos
		size_hint_y: .85

		BoxLayout:
			size_hint_x: .7


		# Sidebar
		BoxLayout:
			size_hint_x: .3
			canvas.before:
				Color:
					rgba: hex('#00EBBF')
				Rectangle:
					size: self.size
					pos: self.pos

	
		
					# Footer
	BoxLayout:
		size_hint_y: .03
		canvas.before:
			Color:
				rgba: hex('#3E0092')
			Rectangle:
				size: self.size
				pos: self.pos


		

				

