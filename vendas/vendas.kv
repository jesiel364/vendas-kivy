#:import hex kivy.utils.get_color_from_hex

<Btn@Button>:
	background_normal:''
	background_color: hex('#BA004F')
	color: hex('#ffffff')


<VendasWindow>:
	orientation: 'vertical'
	BoxLayout:

		size_hint_y: .1
		canvas.before:
			Color:
				rgba: hex('#3E0092')
			Rectangle:
				size: self.size
				pos: self.pos

		spacing: .5


		Label:
			id: lbl_bemvindo
			size_hint_x: .3
			text: 'Seja Bem Vindo: '
			color: hex('#ffffff')

		GridLayout:
			size_hint_x: .25
			rows: 2
			cols: 2
			Label:
				text: 'Data: '
				color: hex('#ffffff')
			
			Label:
				id: data
				color: hex('#ffffff')

			Label:
				text: 'Hora: '
				color: hex('#ffffff')

			Label:
				id: hora
				color: hex('#ffd700')

		Label:
			size_hint_x: .2

		
		Btn:
			id: admin_btn
			size_hint_x: .15
			text: 'Administrador'
			on_release: root.admin()
			
		
		Btn:
			id: sair
			size_hint_x: .15
			text: 'Sair'
			on_release: root.sair()


	BoxLayout:
		canvas.before:
			Color:
				rgba: hex('#6400EB')
			Rectangle:
				size: self.size
				pos: self.pos
		

	BoxLayout:
		# size_hint_y: .1
		canvas.before:
			Color:
				rgba: hex('#3E0092')
			Rectangle:
				size: self.size
				pos: self.pos
		

				

